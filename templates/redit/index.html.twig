{% extends 'base.html.twig' %}

{% block title %}Hello {{ 'cao' }}!{% endblock %}

{% block body %}

    {% if posts %}
        <ul>
            
            {% for post in posts %}

                <li>{{post.id }} - {{ post.title }}</li>

            {% endfor %}
             
        </ul>
    {% else %}
                 
        <h3 class="text-center">No Posts</h3>
        
    {% endif %}

   
    
{% endblock %}
