{% extends 'base.html.twig' %}

{% block title %}SymphArt Articles{% endblock %}

{% block body %}

    <h1>Articles</h1>
    
   {% if artikli %}
       <table id="articles" class="table table-striped">
           <thead>
               <tr>
                   <th>Article Title</th>
                   <th>Actions</th>
               </tr>
           </thead>
           <tbody>
            
                {% for art in artikli %}

                <tr>
                    <td>{{ art.title }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': art.id}) }}" class="btn btn-dark">Show</a>
                    <a href="{{ asset('uploads/brochures/' ~ art.brochure) }}">View brochure (PDF)</a>
                </td>
                <td>
                    <a 
                        href="{{ path('edit_article', {'id': art.id}) }}" 
                        class="btn btn-info delete-article"
                        data-id="{{ art.id }}">Edit</a>
                </td>
                <td>
                    <a 
                        href="{{ path('delete_article', {'id': art.id}) }}" 
                        class="btn btn-danger delete-article"
                        data-id="{{ art.id }}">Delete</a>
                </td>
                
                 </tr>
                {% endfor %}
           
           </tbody>
       </table>
   {% else %}
       
       <p>No articles to display</p>
       
   {% endif %}
    
  
{% endblock body%}

 {% block main %}
     <div class="row">
         <div class="col">
             <h1 class="text-center">Main content</h1>
              <div id="result"></div>
         </div>
     </div>
 {% endblock main %}
 
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/main.js')}}"></script>
{% endblock %}